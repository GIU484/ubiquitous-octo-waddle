{
  "manifest_version": 3,
  "name": "Text Expander",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
      "default_popup": "index.html",
      "default_icon": {
          "16": "logo192.png",
          "48": "logo192.png",
          "128": "logo192.png"
      }
  },
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
  }
}